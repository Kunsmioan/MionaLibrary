<UserControl x:Class="MionaLibrary.ManagerControls.HelpControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:MionaLibrary.ManagerControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="white" Margin="40,30,30,30">
        <!-- Title Label -->

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Help Section" FontSize="20" FontWeight="Bold" Foreground="Black" />
            <fa:ImageAwesome Icon="QuestionCircle" Foreground="Black" Width="18" Height="42" VerticalAlignment="Top" Margin="5"/>
        </StackPanel>

        <!-- Instructions Label -->
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <TextBlock Text="Instructions:" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <TextBlock Text="1. Add a new task using the 'Add Task' button." FontSize="14" Foreground="Black" Margin="10,0,0,5"/>
            <TextBlock Text="2. Mark tasks as completed by checking the box." FontSize="14" Foreground="Black" Margin="10,0,0,5"/>
            <TextBlock Text="3. Delete tasks using the 'Remove' button." FontSize="14" Foreground="Black" Margin="10,0,0,10"/>
        </StackPanel>

        <!-- Tips Label -->
        <StackPanel Orientation="Vertical"  Grid.Row="2">
            <TextBlock Text="Tips:" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <TextBlock Text="- Use the search bar to quickly find tasks." FontSize="14" Foreground="Black" Margin="10,0,0,5"/>
            <TextBlock Text="- Organize tasks into categories for better management." FontSize="14" Foreground="Black" Margin="10,0,0,10"/>
        </StackPanel>

        <!-- Troubleshooting Label -->
        <StackPanel Orientation="Vertical" Grid.Row="3">
            <TextBlock Text="Troubleshooting:" FontSize="16" FontWeight="SemiBold" Foreground="Black"/>
            <TextBlock Text="- If tasks are not saving, ensure your internet connection is active." FontSize="14" Foreground="Black" Margin="10,0,0,5"/>
            <TextBlock Text="- For further assistance, contact support@example.com." FontSize="14" Foreground="Black" Margin="10,0,0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
