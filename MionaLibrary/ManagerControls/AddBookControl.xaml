<UserControl x:Class="MionaLibrary.ManagerControls.AddBookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MionaLibrary.ManagerControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid>
        <Grid Margin="10" Background="#FFEDDCDC">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <TextBlock Text="Add New Book" FontSize="20" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel  Margin="5,0,5,0" Grid.Column="1">
                    <!-- Title -->
                    <TextBlock Text="Title:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtTitle" Height="30" Margin="0,0,0,5" />

                    <!-- Author -->
                    <TextBlock Text="Author:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtAuthor" Height="30" Margin="0,0,0,5"/>

                    <!-- Publish Year -->
                    <TextBlock Text="Publish Year:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtPublishYear" Height="30" Margin="0,0,0,5"/>

                    <!-- ISBN -->
                    <TextBlock Text="ISBN:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtIsbn" Height="30" Margin="0,0,0,5"/>

                    <!-- Genre -->
                    <TextBlock Text="Genre:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtGenre" Height="30" Margin="0,0,0,5"/>
                    
                    <!-- Language -->
                    <TextBlock Text="Language:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtLanguage" Height="30" Margin="0,0,0,5"/>

                   
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="5,0,5,5">
                    <!-- Quantity -->
                    <TextBlock Text="Quantity:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtQuantity" Height="30" Margin="0,0,0,5"/>

                    <!-- Image Path -->
                    <TextBlock Text="Image Path:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtImagePath" Height="30" Margin="0,0,0,5"/>

                    <!-- Page -->
                    <TextBlock Text="Page:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtPage" Height="30" Margin="0,0,0,5"/>

                    <!-- Description -->
                    <TextBlock Text="Description:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBox x:Name="txtDescription" Height="139" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,5"/>

                </StackPanel>

                <StackPanel Grid.Column="0" Margin="10">
                    <!-- Image -->
                    <Image x:Name="imgBook" Height="273" Width="171" Margin="0,10,0,0" Source="/Images/Book.png"/>
                    <Button Content="Choose Image" Height="30" Margin="0,10,0,0" Click="BtnChooseImage_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="10">
                <!-- Add Button -->
                <Button Content="Add Book" Margin="498,-5,0,5" Click="BtnAddBook_Click" HorizontalAlignment="Left" Width="142"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
