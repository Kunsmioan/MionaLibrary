<UserControl x:Class="MionaLibrary.ManagerControls.HomeStatistic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:MionaLibrary.ManagerControls"
             mc:Ignorable="d" 
                         d:DesignHeight="900" d:DesignWidth="1200">
    <Grid Background="White">
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="170"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Dashboard" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" 
                           x:Name="Username" Margin="19,5,0,0" Grid.Row="0" Background="White"/>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="20,0,10,4" Background="#FF119CC1">
                        <TextBlock Text="30" FontSize="40" x:Name="txtTotalReaders" FontWeight="Bold" Margin="20,5,0,0" Foreground="#FFFDFDFD"  />
                        <TextBlock Text="Readers" FontSize="20" Margin="20,10,0,0" Foreground="White"  />
                        <Button Height="52" Background="#FF237382" Margin="0,20,0,0" Content="More info">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">

                                        <TextBlock Text="{TemplateBinding Content}" Foreground = "White" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                FontSize="20" Margin="130,0,0,0"  />
                                        <fa:ImageAwesome Icon="ArrowCircleRight" Foreground="White" Width="15" Height="15" Margin="5,5,0,0" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,10,4" Background="#FF08AF29">
                        <TextBlock Text="100" x:Name="txtTotalBooks" FontSize="40" FontWeight="Bold" Margin="20,5,0,0" Foreground="#FFFDFDFD"  />
                        <TextBlock Text="Books" FontSize="20"  Margin="20,10,0,0" Foreground="White"  />
                        <Button Height="52" Background="#FF2A8223" Margin="0,20,0,0" Content="More info">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">

                                        <TextBlock Text="{TemplateBinding Content}" Foreground = "White" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                                   FontSize="20" Margin="130,0,0,0" />
                                        <fa:ImageAwesome Icon="ArrowCircleRight" Foreground="White" Width="15" Height="15" Margin="5,5,0,0" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="20,0,10,4" Background="#FFE2482F">
                        <TextBlock Text="47" FontSize="40" FontWeight="Bold" Margin="20,5,0,0" Foreground="#FFFDFDFD"  />
                        <TextBlock Text="Total Books borowing" FontSize="20" Margin="20,10,0,0" Foreground="White"  />
                        <Button Height="52" Background="#FF8A3522" Margin="0,20,0,0" Content="More info">
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <StackPanel Background="{TemplateBinding Background}" Orientation="Horizontal">

                                        <TextBlock Text="{TemplateBinding Content}" Foreground = "White" HorizontalAlignment="Center" VerticalAlignment="Center" 
                                FontSize="20" Margin="130,0,0,0"  />
                                        <fa:ImageAwesome Icon="ArrowCircleRight" Foreground="White" Width="15" Height="15" Margin="5,5,0,0" />
                                    </StackPanel>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Margin="10">
                    <!-- Tiêu đề -->
                    <TextBlock Text="New imported books" FontSize="24" FontWeight="Bold" Margin="10,10,0,10"/>

                    <!-- DataGrid để hiển thị bảng -->
                    <DataGrid x:Name="dgBooks" 
                  AutoGenerateColumns="False" Margin="10,10,10,62" 
  AlternatingRowBackground="#FFF5F5F5" RowBackground="White"
  BorderBrush="#FFDDDDDD" BorderThickness="1" GridLinesVisibility="None" CanUserAddRows="False">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FFEEEEEE" />
                                <Setter Property="Foreground" Value="#FF333333" />
                                <Setter Property="FontWeight" Value="Bold" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Padding" Value="10,5,10,5" />
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Margin" Value="10,15,10,10" />
                                <Setter Property="FontSize" Value="12" />
                                <Setter Property="Foreground" Value="#FF444444" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FFE0E0FF" />
                                        <Setter Property="Foreground" Value="#FF000000" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        
                        <DataGrid.Columns>
                            <!-- Cột Số thứ tự (#) -->
                            <DataGridTextColumn Header="#" 
                                   Binding="{Binding Id}"
                                   Width="Auto"
                                   MinWidth="50"/>

                            <!-- Cột Tên sách (Name Book) -->
                            <DataGridTextColumn Header="Name Book" 
                                   Binding="{Binding Title}"
                                   Width="*"
                                   MinWidth="200"/>

                            <!-- Cột Số lượng (Amount) -->
                            <DataGridTextColumn Header="Quantity" 
                                   Binding="{Binding Quantity}"
                                   Width="Auto"
                                   MinWidth="100"/>

                            <!-- Cột Số kỳ (Issue Number) -->
                            <DataGridTextColumn Header="Issue Number" 
                                   Binding="{Binding IssueNumber}"
                                   Width="Auto"
                                   MinWidth="150"/>

                            <!-- Cột Ngày tạo (Create) -->
                            <DataGridTextColumn Header="Create date" 
                                   Binding="{Binding CreateDate, StringFormat='yyyy-MM-dd'}"
                                   Width="Auto"
                                   MinWidth="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </Grid>
        </ScrollViewer>

    </Grid>

</UserControl>
