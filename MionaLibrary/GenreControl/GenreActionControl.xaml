<UserControl x:Class="MionaLibrary.GenreControl.GenreActionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MionaLibrary.GenreControl"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Genre Actions" Grid.Row="0" Background="#FFFDFDFD" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>

        <!-- DataGrid để hiển thị danh sách thể loại -->
        <DataGrid x:Name="dataGridGenres" AutoGenerateColumns="False" Margin="20" CanUserAddRows="False"
                  Grid.Row="1" SelectionChanged="dataGridGenres_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20">
            <TextBlock Text="Add/Update:" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="txtGenreName" Width="300" Height="35" VerticalAlignment="Center" Margin="10,5,5,5" />
        </StackPanel>

        <!-- Các nút điều khiển -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="3" Height="41" HorizontalAlignment="Center" Width="640">
            <Button Content="Add" Width="150" Margin="0,0,25,0"  Style="{StaticResource ButtonStyleSingle}"
                    Click="BtnAdd_Click" FontSize="14" Background="#FF46E41C"/>
            <Button Content="Update" Width="150" Margin="0,0,25,0" Style="{StaticResource ButtonStyleSingle}" 
                    Click="BtnUpdate_Click" FontSize="14"/>
            <Button Content="Delete" Width="150" Margin="0,0,25,0" Style="{StaticResource ButtonStyleSingle}" 
                    Click="BtnDelete_Click" FontSize="14" Background="#FFE02121"/>
        </StackPanel>
    </Grid>
</UserControl>
