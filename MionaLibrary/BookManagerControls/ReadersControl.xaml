<UserControl x:Class="MionaLibrary.BookManagerControls.ReadersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MionaLibrary.BookManagerControls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Current Readers in Miona Library" 
            FontSize="24" FontWeight="Bold" Foreground="#FF3D3D3D"
            HorizontalAlignment="Center" Margin="0,20,0,10" Grid.Row="0"/>

        <!-- DataGrid để hiển thị thông tin sách đang mượn hoặc quá hạn -->
        <DataGrid Name="UserDataGrid" AutoGenerateColumns="False" Margin="10,0,10,30" 
   AlternatingRowBackground="#FFF5F5F5" RowBackground="White" Grid.Row="1"
   BorderBrush="#FFDDDDDD" BorderThickness="1" GridLinesVisibility="None"
                  CanUserAddRows="False">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FFEEEEEE" />
                    <Setter Property="Foreground" Value="#FF333333" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Padding" Value="10,5,10,5" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Margin" Value="10,15,10,10" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Foreground" Value="#FF444444" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFE0E0FF" />
                            <Setter Property="Foreground" Value="#FF000000" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <!-- ID Column -->
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="100" />

                <!-- Full Name Column (with Button for Link) -->
                <DataGridTemplateColumn Header="Full Name" Width="*" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="Blue" 
                        Cursor="Hand" 
                        Click="ReaderDetailsAndBooksOnloan_Click" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource TransparentButtonStyle}">
                                <TextBlock TextWrapping="Wrap" MaxWidth="200">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="FirstName" />
                                            <Binding Path="LastName" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Username Column -->
                <DataGridTemplateColumn Header="Username" Width="*" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Username}" TextWrapping="Wrap" MaxWidth="200" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Birthday Column -->
                <DataGridTemplateColumn Header="Birthday" Width="*" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Birthday, StringFormat=\{0:dd/MM/yyyy\}}" TextWrapping="Wrap" MaxWidth="200" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Gender Column -->
                <DataGridTemplateColumn Header="Gender" Width="150" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Gender}" TextWrapping="Wrap" MaxWidth="200" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Phone Column -->
                <DataGridTemplateColumn Header="Phone" Width="*" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Phone}" TextWrapping="Wrap" MaxWidth="200" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Actions" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button 
                Content="Delete" 
                Tag="{Binding Id}" 
                Click="Delete_Click" 
                Background="#FFF72525" 
                Foreground="White" 
               
                Style="{StaticResource ButtonStyleSingle}" 
                Cursor="Hand" Margin="1,0,0,0" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
