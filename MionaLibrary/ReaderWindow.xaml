<Window x:Class="MionaLibrary.ReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:MionaLibrary"
        mc:Ignorable="d"
        Title="ReaderWindow" Height="450" Width="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border Background="#FF3D3D3D" Grid.Column="0" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- Các nút chính chiếm phần trên -->
                    <RowDefinition Height="Auto"/>
                    <!-- Logout ở dưới cùng -->
                </Grid.RowDefinitions>

                <!-- Các nút chính -->
                <StackPanel Grid.Row="0">
                    <Button Content="Home" HorizontalAlignment="Left" Width="100" Height="50" Background="#FF3D3D3D" Foreground="White" BorderThickness="0" Click="Home_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <fa:ImageAwesome Icon="Home" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Books" HorizontalAlignment="Left" Width="100" Height="50" Background="#FF3D3D3D" Foreground="White" BorderThickness="0" Click="Books_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <fa:ImageAwesome Icon="Book" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="Favorites" HorizontalAlignment="Left" Width="100" Height="50" Background="#FF3D3D3D" Foreground="White" BorderThickness="0" Click="Favorites_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <fa:ImageAwesome Icon="Heart" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" Grid.Column="1" VerticalAlignment="Center"/>
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="ProfileButton" Content="Profile" HorizontalAlignment="Left" Width="100" Height="50" Background="#FF3D3D3D" Foreground="White" BorderThickness="0" Click="Profile_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <fa:ImageAwesome Icon="User" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <TextBlock Text="{TemplateBinding Content}" Foreground="White" Grid.Column="1" VerticalAlignment="Center" />
                                </Grid>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    
                </StackPanel>

                <!-- Logout button ở dưới cùng -->
                <Button Content="Logout" Click="Logout_Click" HorizontalAlignment="Left" Width="100" Height="50" Background="Red" Foreground="White" BorderThickness="0" Grid.Row="1" Margin="0,10,0,10">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <fa:ImageAwesome Icon="SignOut" Foreground="White" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <TextBlock Text="{TemplateBinding Content}" Foreground="White" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Profile Details" FontSize="20" FontWeight="Bold" Margin="10" 
                       Grid.Row="0"/>

            <!-- Các điều khiển nhập liệu cho profile -->
            <StackPanel Margin="10" Grid.Row="1">
                <!-- Hiển thị Username -->
                <TextBlock Text="Username:" FontWeight="Bold" Margin="10,5,0,0"/>
                <TextBlock Text="{Binding reader.Username}" Margin="0,5" Width="200" />

                <!-- Hiển thị Full Name -->
                <TextBlock Text="Full Name:" FontWeight="Bold" Margin="10,5,0,0"/>
                <TextBlock Text="{Binding reader.FullName}" Margin="0,5" Width="200" />

                <!-- Hiển thị Birthday -->
                <TextBlock Text="Birthday:" FontWeight="Bold" Margin="10,5,0,0"/>
                <TextBlock Text="{Binding reader.Birthday, StringFormat='{}{0:dd/MM/yyyy}'}" Margin="0,5" Width="200" />

                <!-- Hiển thị Gender -->
                <TextBlock Text="Gender:" FontWeight="Bold" Margin="10,5,0,0"/>
                <TextBlock Text="{Binding reader.Gender}" Margin="0,5" Width="200" />

                <!-- Hiển thị Phone (nếu có) -->
                <TextBlock Text="Phone:" FontWeight="Bold" Margin="10,5,0,0"/>
                <TextBlock Text="{Binding reader.Phone}" Margin="0,5" Width="200" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>
