<UserControl x:Class="MionaLibrary.UserControls.ProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:MionaLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

    <Grid Background="white">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/user.png" Margin="247,10,247,10" RenderTransformOrigin="-0.086,0.51"/>

        <!-- Các điều khiển nhập liệu cho profile -->
        <StackPanel Margin="10" Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Height="40" HorizontalAlignment="Center">
                <TextBlock Text="Username:" FontWeight="Bold" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                <TextBox x:Name="tbUsername" Width="300" IsReadOnly="True" Padding="2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Height="40" HorizontalAlignment="Center">
                <TextBlock Text="Full Name:" FontWeight="Bold" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                <TextBox x:Name="tbfullName" Width="300" IsReadOnly="True" Padding="2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Height="40" HorizontalAlignment="Center">
                <TextBlock Text="Birthday:" FontWeight="Bold" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                <TextBox x:Name="tbBirthday" Width="300" IsReadOnly="True" Padding="2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Height="40" HorizontalAlignment="Center">
                <TextBlock Text="Gender:" FontWeight="Bold" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12"/>
                <TextBox x:Name="tbGender"  Width="300" IsReadOnly="True" Padding="2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,0,0,0" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Phone:" FontWeight="Bold" Width="80" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBox x:Name="tbPhone" Width="300" IsReadOnly="True" Padding="2"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
