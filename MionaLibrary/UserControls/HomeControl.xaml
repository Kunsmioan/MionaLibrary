<UserControl x:Class="MionaLibrary.UserControls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:MionaLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Width="500" Height="50" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,20,5,20"
                      Grid.Column="0">
                    <!-- TextBox for User Input -->
                    <TextBox x:Name="SearchTextBox" 
             Background="Transparent" BorderBrush="Gray" BorderThickness="1"
             TextChanged="SearchTextBox_TextChanged" Margin="0,5,5,5"/>

                    <!-- Placeholder Text -->
                    <TextBlock x:Name="PlaceholderText" Text="Enter search term..." 
               Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" 
               Margin="15,0,0,0" IsHitTestVisible="False" Height="20" Width="138" FontSize="14">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Search Button -->
                <Border Background="#FFD2CFCF" Width="40" Height="40" CornerRadius="5" Grid.Column="1">
                    <Button Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" 
            Background="Transparent" BorderThickness="0" Click="SearchButton_Click">
                        <!-- Search Icon -->
                        <fa:ImageAwesome Icon="Search" Width="30" Foreground="Gray" Height="30"/>
                    </Button>
                </Border>
            </Grid>

            <!-- Search Input TextBox -->
        </StackPanel>

        <Grid Margin="10" Grid.Row="1">
            <!-- Search Input Section -->
            <!-- Search Results Section with DataGrid -->
            <DataGrid x:Name="SearchResultsDataGrid" AutoGenerateColumns="False" Loaded="LoadData" Margin="10,0,10,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*" />
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*" />
                    <DataGridTextColumn Header="Language" Binding="{Binding Language}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>

</UserControl>
