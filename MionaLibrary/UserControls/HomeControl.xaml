<UserControl x:Class="MionaLibrary.UserControls.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
              xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:MionaLibrary.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="SearchTypeComboBox" Grid.Column="0" Width="150" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center" 
          FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="5" KeyDown="SearchTextBox_KeyDown" Margin="10,15,5,10">
                    <ComboBoxItem Content="Title" IsSelected="True"/>
                    <ComboBoxItem Content="Author"/>
                    <ComboBoxItem Content="Genre"/>
                    <ComboBoxItem Content="Language"/>
                </ComboBox>

                <Grid Width="auto" Margin="20,10,10,10"
               Grid.Column="1">
                    <!-- TextBox for User Input -->
                    <TextBox x:Name="SearchTextBox" Background="Transparent" BorderBrush="Gray" BorderThickness="1"
      TextChanged="SearchTextBox_TextChanged" Margin="5,10,10,5" KeyDown="SearchTextBox_KeyDown" Width="850" Height="60"/>

                    <!-- Placeholder Text -->
                    <TextBlock x:Name="PlaceholderText" Text="Enter search term..." Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" 
        Margin="20,0,0,0" IsHitTestVisible="False" Height="30" Width="auto" FontSize="20">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Search Button -->
                <Border Background="#FFD2CFCF" Width="80" Height="60" CornerRadius="5" Grid.Column="2" Margin="0,5,0,0">
                    <Button Width="40" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center" 
     Background="Transparent" BorderThickness="0" Click="SearchButton_Click" >
                        <!-- Search Icon -->
                        <fa:ImageAwesome Icon="Search" Width="30" Foreground="Gray" Height="60"/>
                    </Button>
                </Border>
            </Grid>

            <!-- Search Input TextBox -->
        </StackPanel>

        <Grid Margin="10" Grid.Row="1">
            <!-- Search Results Section with DataGrid -->
            <DataGrid x:Name="SearchResultsDataGrid" 
       AutoGenerateColumns="False" 
       Loaded="LoadData" 
       Margin="10,0,10,0"
       SelectionMode="Single" 
       SelectionUnit="Cell"
       IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40" IsReadOnly="True"/>

                    <DataGridTemplateColumn Header="Image" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ImagePath}" 
                                    Stretch="Uniform" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Height="100"
                                    Margin="3"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Title as Button -->
                    <DataGridTemplateColumn Header="Title" Width="2*" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button
                         Background="Transparent" 
                         BorderThickness="0" 
                         Foreground="Blue" 
                         Cursor="Hand" 
                         Click="TitleButton_Click" HorizontalAlignment="Left"
                             Style="{StaticResource TransparentButtonStyle}">
                                    <TextBlock Text="{Binding Title}" 
                               TextWrapping="Wrap" 
                               MaxWidth="150" 
                               VerticalAlignment="Center"  Padding="3" FontSize="13"/>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Author" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <TextBlock Text="{Binding Author}" 
                               TextWrapping="Wrap" 
                               MaxWidth="150" 
                               VerticalAlignment="Center" Padding="3" FontSize="13" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Language" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <TextBlock Text="{Binding Language}" 
                               TextWrapping="Wrap" 
                               MaxWidth="150" 
                               VerticalAlignment="Center" Padding="3" FontSize="13"/>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Genre" Width="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <TextBlock Text="{Binding Genre.Name}" 
                    TextWrapping="Wrap" 
                    MaxWidth="150" 
                    VerticalAlignment="Center" Padding="3" FontSize="13"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTemplateColumn Header="Description" Width="*" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>

                                <TextBlock Text="{Binding Description}" 
           TextWrapping="Wrap" 
           MaxWidth="150" 
           VerticalAlignment="Center" Padding="3" FontSize="13" HorizontalAlignment="Left" Margin="10,0,0,0"/>

                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                  
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


    </Grid>

</UserControl>
